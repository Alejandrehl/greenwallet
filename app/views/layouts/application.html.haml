!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Greenwallet
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %a.navbar-brand{:href => "/"} Â¡GreenWallet!
      %button.navbar-toggler{"aria-controls" => "navbarText", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarText", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarText.collapse.navbar-collapse
        - if user_signed_in?
          %ul.navbar-nav.mr-auto
            %li.nav-item
              %a.nav-link{:href => "/"}
                Inicio
            %li.nav-item
              %a.nav-link{:href => "/businesses"} Mis negocios
          %span.navbar-text
            = link_to("Salir", destroy_user_session_path, method: :delete)
    %p.notice= notice
    %p.alert= alert
    .container
      = yield
